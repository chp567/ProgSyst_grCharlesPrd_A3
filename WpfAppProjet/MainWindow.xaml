<Window x:Class="WpfAppProjet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProjet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Save Setup" Margin="-2,-2,-59,-20">
            <Grid Background="#FFE5E5E5">
                <Button Content="Create" HorizontalAlignment="Left" Margin="603,82,0,0" VerticalAlignment="Top" Height="47" Width="158" Click="Button_create"/>


                <Button x:Name="btnOpenFile_s" Click="btnOpenFile_source" Content="Source" Margin="82,73,622,266"/>
                <TextBox x:Name="txtEditor_source" Margin="16,160,556,202" />
                <Button x:Name="btnOpenFile_d" Click="btnOpenFile_dest" Content="Destination" Margin="376,73,328,266"/>
                <TextBox x:Name="txtEditor_dest" Margin="288,160,239,202" />

            </Grid>
        </TabItem>

        <TabItem Header="Save Worker" Margin="58,-2,-136,-19">
            <Grid Background="#FFE5E5E5">

                <Label Content="Sauvegarde Unique" Grid.Column="1" HorizontalAlignment="Left" Margin="474,28,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
                <Label Content="Sauvegarde Multiple" Grid.Column="1" HorizontalAlignment="Left" Margin="468,0,0,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"/>
                <Button Content="LANCER" Grid.Column="1" HorizontalAlignment="Left" Margin="425,85,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_unique_play"/>
                <Button Content="PAUSE" Grid.Column="1" HorizontalAlignment="Left" Margin="525,85,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_unique_pause"/>
                <Button Content="STOP" Grid.Column="1" HorizontalAlignment="Left" Margin="627,85,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_unique_stop"/>
                <Button Content="LANCER" Grid.Column="1" HorizontalAlignment="Left" Margin="425,245,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_multiple_play"/>
                <Button Content="PAUSE" Grid.Column="1" HorizontalAlignment="Left" Margin="526,245,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_multiple_pause"/>
                <Button Content="STOP" Grid.Column="1" HorizontalAlignment="Left" Margin="627,245,0,0" VerticalAlignment="Top" Height="46" Width="72" Click="Button_multiple_stop"/>
                <ScrollBar HorizontalAlignment="Left" Margin="353,0,0,0" VerticalAlignment="Center" Height="246" Width="21"/>

            </Grid>
        </TabItem>
        <TabItem Header="Settings" Margin="135,-2,-213,-19">
            <Grid Background="#FFE5E5E5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="360*"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </TabItem>

    </TabControl>

</Window>
